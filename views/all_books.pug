extends layout

block content

  h1 Books
  p
    a(href="/books/new" class="button") Create New Book
  nav
    ul
      li Filters
      li
        a(href="/books") All 
        |
      li 
        a(href="/books/overdue") Overdue 
        | 
      li
        a(href="/books/checked") Checked Out
  table
    thead
        tr
          th Title
          th Author
          th Genre
          th Year Released
    tbody
      each book in books
        tr
          td
            a(href="/books/" + book.id) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.first_published}
